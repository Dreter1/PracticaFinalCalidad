<h2>Crear Tema</h2>
<span id="CrearTemasLink"></span>
<form action="/Tema/Crear" method="post">
   
    <div class="form-group">
        <label>Tema</label>
        <input name="Nombre" id="CrearNombreTema" class="form-control" value="@Model.Nombre">
        @Html.ValidationMessage("Nombre")
    </div>
    <div class="form-group">
        <label>Categorias</label>
        <select multiple class="form-control" name="Ids" id="CrearCategoriaTema" >
            @foreach(var item in ViewBag.Categorias) { 
            <option value="@item.Id">@item.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea id="CrearDescripcionTema"  class="form-control" name="Descripcion" rows="5">@Model.Descripcion</textarea>
        @Html.ValidationMessage("Descripcion")
    </div>
    <button id="CrearTemaLink" type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-link" id="CancelarCrearTemaLink" href="/Tema">Cancelar</a>
</form>