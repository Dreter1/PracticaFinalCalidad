<h2>Editar Tema</h2>
<span id="EditarTemasLink"></span>
<form action="/Tema/Editar?id=@Model.Id" method="post">
    <div class="form-group">
        <label>Tema</label>
        <input class="form-control" id="EditarNombreTema" name="Nombre" value="@Model.Nombre">        
        @Html.ValidationMessage("Nombre")
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea class="form-control" id="EditarDescripcionTema" name="Descripcion">@Model.Descripcion</textarea>
        <span>@ViewBag.DescripcionValicion</span>
        @Html.ValidationMessage("Descripcion")
    </div>
    <button class="btn btn-primary" id="EditarTemaLink">Guardar</button>
    <a class="btn btn-link" href="/Tema" id="CancelarEditarTemaLink">Cancelar</a>
</form>